<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <h1 id="productsCount">Total Products: 0</h1>
  <button id="getProductsButton">Chercher</button>

  <script>
    const socket = io();

    document.getElementById('getProductsButton').addEventListener('click', () => {
      socket.emit('getProductsCount'); 
    });

    // RÃ©ception et affichage du nombre total de produits
    socket.on('productsCount', (count) => {
      document.getElementById('productsCount').innerText = `Total Products: ${count}`;
    });
  </script>
</body>
</html>
